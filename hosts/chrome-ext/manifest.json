{
  "name": "jBart helper",
  "version": "0.6",
  "manifest_version": 2,
  "description": "Low footprint helpers in any site",
  "homepage_url": "http://jbart.rocks",
  "web_accessible_resources" : [],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' http://localhost:8082; object-src 'self'",
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "jb-helper/jb-helper-popup.html",
    "default_title": "Make this page red"
  }
}