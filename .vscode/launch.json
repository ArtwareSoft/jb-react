{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "jb",
            "program": "${workspaceFolder}/bin/jb",
            "args": ["-main:split(\"-\")", "%text:rak-lo-%$v2%","%part:but first","%v1:pipeline('bb',first())","%v2:#%$v1%#"],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "jb with wrap",
            "program": "${workspaceFolder}/bin/jb",
            "args": ["-main:split(\"-\")", "%text:rak-lo-%$v1%","%part:but first","%v1:bb","-wrap:pipeline(MAIN ,\"#%%#\")"],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "probe",
            "program": "${workspaceFolder}/bin/jb",
            "args": ["-main:probe.runCircuit()", "%probePath:zui.itemPreview~impl~title","-wrap:pipeline(MAIN ,\"%%\")"],
        },

        {
            "type": "node",
            "request": "launch",
            "name": "pretty",
            "program": "${workspaceFolder}/bin/tgp-pretty",
            "args": ["-file:common-features.js"],
        },
        {
            "name": "TGP Lang Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceRoot}/hosts/vscode/tgp-lang"],
        },
        {
            "name": "pptr-server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/misc/puppeteer/pptr-server",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "studio-server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/bin/studio/studio-server",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/bin/tgp2ts",
            "stopOnEntry": false,
            "args": ["srcDir:bin/studio","-out:dist/jbart"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Attach",
            "type": "node",
            "request": "attach",
            "port": 5858,
            "address": "localhost",
            "restart": false,
            "sourceMaps": false,
            "localRoot": "${workspaceRoot}",
            "remoteRoot": null
        }
    ]
}